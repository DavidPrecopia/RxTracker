<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppBarStyle">
        <item name="android:theme">@style/ThemeOverlay.MaterialComponents.Dark.ActionBar</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="elevation">@dimen/elevation_app_bar</item>
    </style>

    <style name="ToolbarStyle">
        <item name="popupTheme">@style/ThemeOverlay.MaterialComponents.Light</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="layout_scrollFlags">scroll|enterAlways</item>
    </style>


    <!--
        Setting TextInputEditText as the textAppearance causes the
        text size to shrink to (roughly) 2sp - thus it needs to be
        explicitly declared.
    -->
    <style name="TitleTextStyle">
        <item name="android:textAppearance">
            @style/Base.Widget.MaterialComponents.TextInputEditText
        </item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="FloatingActionButtonAddStyle" parent="Widget.Design.FloatingActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_normal</item>
        <item name="android:elevation">@dimen/elevation_fab</item>
        <item name="pressedTranslationZ">@dimen/elevation_fab_pressed_z_axis</item>
        <item name="srcCompat">@drawable/ic_add_black_24dp</item>
    </style>

    <style name="ErrorTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableTop">@drawable/ic_error_24dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:visibility">gone</item>
    </style>
</resources>
