<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppBarStyle">
        <item name="android:theme">@style/ThemeOverlay.MaterialComponents.Dark.ActionBar</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="elevation">@dimen/elevation_app_bar</item>
    </style>

    <style name="ToolbarStyle">
        <item name="popupTheme">@style/ThemeOverlay.MaterialComponents.Light</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="layout_scrollFlags">scroll|enterAlways</item>
        <item name="titleTextColor">@color/colorAccent</item>
    </style>


    <!--
        Setting TextInputEditText as the textAppearance causes the
        text size to shrink to (roughly) 2sp - thus it needs to be
        explicitly declared.
    -->
    <style name="TitleTextStyle">
        <item name="android:textAppearance">
            @style/Base.Widget.MaterialComponents.TextInputEditText
        </item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
